<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportApp.Views.AddNewBikeWorkountPage"
             xmlns:vm="clr-namespace:SportApp.ViewModels">

    <ContentPage.BindingContext>
        <vm:AddNewBikeWorkountViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Дата тренировки"/>
            <Entry Text="{Binding DateTimeString, Mode=TwoWay}" FontSize="Medium" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>